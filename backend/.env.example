# Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to git!

# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Connection
# For local: mongodb://localhost:27017/keyshard
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/keyshard
MONGO_URL=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
